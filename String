      //Q Substring 
public static String Substring (String str, int si, int ei) {
String substr = " ";
for(int i= si; i<ei; i++) {
  substr += str.charAt(i);

}
return substr;
}
public static void main(String args[] ) {
  //substring
  String str = "HelloWorld";
  System.out.println(Substring(str, 0 , 5));
}
